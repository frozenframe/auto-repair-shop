<UserControl x:Class="AutoRepairShop.View.CarUserControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:AutoRepairShop.View"
             mc:Ignorable="d" Width="420" Height="300">
    <Grid>
        <TextBlock x:Name="ClientFullname_TextBlock" Margin="10,48,10,0" TextWrapping="Wrap" VerticalAlignment="Top" Height="40" FontSize="30"><Run Text="ФИ"/><Run Text="О"/></TextBlock>
        <TextBlock Margin="10,93,10,0" TextWrapping="Wrap" Text="Машина(при изменении)" VerticalAlignment="Top" Height="28" FontSize="20"/>
        <Label Content="Марка машины" HorizontalAlignment="Left" Margin="10,126,0,0" VerticalAlignment="Top"/>
        <Label Content="Модель машины" HorizontalAlignment="Left" Margin="10,184,0,0" VerticalAlignment="Top"/>
        <ComboBox x:Name="CarBrand_ComboBox" HorizontalAlignment="Left" Margin="10,157,0,0" VerticalAlignment="Top" Width="400"/>
        <ComboBox x:Name="CarModel_ComboBox" HorizontalAlignment="Left" Margin="10,215,0,0" VerticalAlignment="Top" Width="400"/>
        <Button x:Name="AddCar_Button" Content="Добавить" Margin="0,0,10,10" HorizontalAlignment="Right" Width="75" Height="22" VerticalAlignment="Bottom"/>

    </Grid>
</UserControl>
