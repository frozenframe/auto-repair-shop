<UserControl x:Class="AutoRepairShop.View.ClientsViewUserControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:AutoRepairShop.View" xmlns:viewmodel="clr-namespace:AutoRepairShop.ViewModel" d:DataContext="{d:DesignInstance Type=viewmodel:ClientsViewViewModel}"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="5*"/>
            <ColumnDefinition Width="3*"/>
        </Grid.ColumnDefinitions>
        <DataGrid x:Name="ClientsData_DataGrid" Margin="10,10,10,40" ItemsSource="{Binding ClientsList}" SelectedItem="{Binding SelectedClient}" />
        <GridSplitter Height="450" VerticalAlignment="Top" Width="1" Grid.Column="1" Margin="0,0,299,0" Background="Black"/>
        <DataGrid x:Name="ClientCarData_DataGrid" Grid.Column="1" Margin="10,10,10,40"/>
        <Button x:Name="AddClient_Button" Content="Добавить" Margin="0,0,170,10" Command="{Binding OpenClientDataWindowCommand}" HorizontalAlignment="Right" Width="75" Height="22" VerticalAlignment="Bottom"/>
        <Button x:Name="EditClient_Button" Content="Изменить" Margin="0,0,90,10" HorizontalAlignment="Right" Width="75" Height="22" VerticalAlignment="Bottom" Command="{Binding OpenClientDataWindowForEditCommand}"/>
        <Button x:Name="DeleteClient_Button" Content="Удалить" Margin="0,0,10,10" VerticalAlignment="Bottom" HorizontalAlignment="Right" Width="75"/>
        <Button x:Name="AddCar_Button" Content="Добавить" Margin="0,0,215,10" Grid.Column="1" Height="22" VerticalAlignment="Bottom" HorizontalAlignment="Right" Width="75"/>
        <Button x:Name="EditCar_Button" Content="Изменить" Margin="0,0,113,10" VerticalAlignment="Bottom" Grid.Column="1" HorizontalAlignment="Right" Width="74"/>
        <Button x:Name="DeleteCar_Button" Content="Удалить" Margin="215,0,10,10" Grid.Column="1" Height="22" VerticalAlignment="Bottom"/>
    </Grid>
</UserControl>
