<Application x:Class="AutoRepairShop.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:viewmodels ="clr-namespace:AutoRepairShop.ViewModel"
             xmlns:views ="clr-namespace:AutoRepairShop.View"
             StartupUri="View/MainWindow.xaml">
    <Application.Resources>
        <DataTemplate DataType="{x:Type viewmodels:ClientDataViewModel}">
            <views:ClientDataUserControl/>
        </DataTemplate>
        <DataTemplate DataType="{x:Type viewmodels:ClientsViewViewModel}">
            <views:ClientsViewUserControl/>
        </DataTemplate>
        <DataTemplate DataType="{x:Type viewmodels:CarDataViewModel}">
            <views:CarUserControl/>
        </DataTemplate>
        <DataTemplate DataType="{x:Type viewmodels:WorkTypeTreeViewModel}">
            <views:WorkTypeViewUserControl/>
        </DataTemplate>
        <DataTemplate DataType="{x:Type viewmodels:WorkTypeAddUpdateViewModel}">
            <views:AddWorkTypeUserControl/>
        </DataTemplate>
        <DataTemplate DataType="{x:Type viewmodels:SettingsViewModel}">
            <views:SettingsUserControl/>
        </DataTemplate>
        <DataTemplate DataType="{x:Type viewmodels:TechEventViewModel}">
            <views:AddTechEventUserControl/>
        </DataTemplate>
    </Application.Resources>
</Application>
